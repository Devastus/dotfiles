{
  "languageserver":{
    "ccls": {
      "command": "ccls",
      "args": [
        "--log-file=/tmp/ccls.log",
        "-v=1"
      ],
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "objc",
        "objcpp",
        "h",
        "hpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}
